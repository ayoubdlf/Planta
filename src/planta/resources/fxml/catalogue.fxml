<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="/css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="planta.controle.ControleCatalogue">
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="610.0" style="-fx-background-color: white; -fx-padding: 16; -fx-spacing: 16;">

            <VBox alignment="CENTER_LEFT" style="-fx-background-color: white;">

                <Label text="Bonjour" />
                <Label text="Prenez soin de vos plantes !" textFill="#6b7280" />

            </VBox>
            <TextField fx:id="recherche" maxHeight="32.0" minHeight="32.0" prefHeight="32.0" promptText="Rechercher" styleClass="recherche">
                <cursor>
                    <Cursor fx:constant="TEXT" />
                </cursor>
            </TextField>
            <HBox alignment="CENTER" minHeight="32.0" style="-fx-spacing: 2; -fx-padding: 3; -fx-background-color: F3F4F6; -fx-background-radius: 8; -fx-border-radius: 8;">

                <ToggleButton fx:id="filtrerParTout" layoutX="258.0" layoutY="12.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="28.0" text="Tout" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="filtrerParPrix" layoutX="261.0" layoutY="12.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="28.0" text="Prix" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="filtrerParExterieur" layoutX="258.0" layoutY="12.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="28.0" text="Extérieur" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="filtrerParInterieur" layoutX="261.0" layoutY="12.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="28.0" text="Intérieur" textAlignment="CENTER" HBox.hgrow="ALWAYS" />

                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                <FlowPane fx:id="listePlantes" alignment="TOP_CENTER" columnHalignment="CENTER" style="-fx-background-color: white; -fx-hgap: 16; -fx-vgap: 16;" />
            </ScrollPane>

        </VBox>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Fichier">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onCharger" text="Charger" />
                        <MenuItem mnemonicParsing="false" onAction="#onSauvegarder" text="Sauvegarder" />
                        <MenuItem mnemonicParsing="false" onAction="#onQuitter" text="Fermer" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edition">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAjouter" text="Ajouter" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
